<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enterinput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_enterinput_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_enterinput_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_enterinput_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <FrameLayout
        android:id="@+id/sqbox1"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:background="@drawable/square_button"
        android:backgroundTint="@color/second_panel"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/guideline_enterinput_2"
        app:layout_constraintStart_toStartOf="@id/guideline_enterinput_1"
        app:layout_constraintTop_toBottomOf="@id/guideline_enterinput_3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:text="@string/Dosage_entername"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="70dp"
            android:text="확인"
            android:textSize="14sp"
            android:background="@drawable/square_button"
            android:backgroundTint="@color/second_panel"
            android:clickable="false"/>


    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>